<hr />
<h2 class="<%= 'text-danger' if error %>"><%= title %></h2>
<table class="table table-striped table-sm">
  <thead>
    <tr>
      <th>Customer Name</th>
      <th>Item Description</th>
      <th>Item Price</th>
      <th>Quantity</th>
      <th>Sub-Total</th>
      <th>Merchant Name</th>
      <th>Merchant Address</th>
      <% if error %><th>Errors</th><% end %>
    </tr>
  </thead>
  <tbody>
    <% sales.each do |sale| %>
      <tr>
        <td><%= sale.customer_name %></td>
        <td><%= sale.item_description %></td>
        <td><%= dollar_format sale.item_price %></td>
        <td><%= sale.quantity %></td>
        <td><%= dollar_format sale.total_price %></td>
        <td><%= sale.merchant_name %></td>
        <td><%= sale.merchant_address %></td>
        <% if error %><td class="text-danger"><%= sale.errors.full_messages.join(', ') %></td><% end %>
      </tr>
    <% end %>
  </tbody>
</table>